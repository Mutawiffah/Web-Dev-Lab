<div class="container mt-5">
    <a href="/admin/dashboard" class="btn btn-secondary mb-3">‚Üê Back to Dashboard</a>

  <h2 class="mb-4">Edit Product</h2>
  <form action="/admin/products/edit/<%= product._id %>" method="POST" class="p-4 border rounded bg-light">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input id="title" name="title" value="<%= product.title %>" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input id="price" name="price" value="<%= product.price %>" type="number" step="0.01" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" name="description" rows="4" class="form-control" required><%= product.description %></textarea>
    </div>

    <div class="mb-3">
      <label for="imageUrl" class="form-label">Image URL</label>
      <input id="imageUrl" name="imageUrl" value="<%= product.imageUrl %>" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>
  </form>
</div>
