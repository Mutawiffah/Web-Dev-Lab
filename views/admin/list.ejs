<div class="container">
    <a href="/admin/dashboard" class="btn btn-secondary mb-3">‚Üê Back to Dashboard</a>

  <h2 class="mb-4">Product List</h2>

  <% if (products.length === 0) { %>
    <div class="alert alert-info">No products available.</div>
  <% } else { %>
    <ul class="list-group">
      <% products.forEach(p => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= p.title %></strong> - $<%= p.price %>
          </div>
          <div>
            <a href="/admin/products/edit/<%= p._id %>" class="btn btn-sm btn-warning">Edit</a>
            <form action="/admin/products/delete/<%= p._id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
            <form action="/cart/add/<%= p._id %>" method="POST" class="d-inline">
              <button class="btn btn-sm btn-success">Add to Cart</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
